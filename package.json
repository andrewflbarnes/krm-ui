{
  "name": "krm-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "postinstall": "./netlify/functions/install.sh",
    "start": "vite",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "npx oxlint && npx eslint",
    "e2e": "playwright test",
    "e2e:ui": "cross-env PLAYWRIGHT_UI=true playwright test --ui",
    "e2e:report": "playwright show-report",
    "check": "tsc --noEmit --skipLibCheck",
    "serve": "cp serve.json dist/ && serve -l 5173 dist/",
    "ngrok": "ngrok start krm",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o dist/krm-ui-storybook"
  },
  "dependencies": {
    "@alenaksu/json-viewer": "^2.1.2",
    "@clerk/themes": "^2.2.17",
    "@solidjs/router": "^0.15.1",
    "@suid/icons-material": "^0.9.0",
    "@suid/material": "^0.19.0",
    "@suid/system": "^0.14.0",
    "@tanstack/solid-query": "^5.74.3",
    "@thisbeyond/solid-dnd": "^0.7.5",
    "clerk-solidjs": "^2.0.10",
    "downloadjs": "^1.4.7",
    "firebase": "^11.3.1",
    "solid-js": "^1.9.7",
    "solid-toast": "^0.5.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@eslint/js": "^9.15.0",
    "@netlify/plugin-lighthouse": "^6.0.1",
    "@playwright/test": "^1.53.1",
    "@solidjs/testing-library": "^0.8.10",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@suid/types": "^0.8.0",
    "@suid/vite-plugin": "^0.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/downloadjs": "^1.4.6",
    "@types/node": "^22.13.10",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "eslint-plugin-oxlint": "^1.3.0",
    "eslint-plugin-solid": "^0.14.4",
    "eslint-plugin-storybook": "^0.11.3",
    "globals": "^15.12.0",
    "jsdom": "^26.0.0",
    "oxlint": "^1.3.0",
    "serve": "^14.2.4",
    "storybook": "^8.6.4",
    "storybook-solidjs": "^1.0.0-beta.6",
    "storybook-solidjs-vite": "^1.0.0-beta.6",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.7",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@storybook/builder-vite": "$storybook",
      "@storybook/csf-plugin": "$storybook"
    }
  },
  "packageManager": "pnpm@10.6.4+sha512.da3d715bfd22a9a105e6e8088cfc7826699332ded60c423b14ec613a185f1602206702ff0fe4c438cb15c979081ce4cb02568e364b15174503a63c7a8e2a5f6c",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
